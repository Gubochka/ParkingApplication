@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - ParkingApplication</title>
    <link rel="icon" type="image/x-icon" href="~/images/ParkingFavico.png">
    <link rel="stylesheet" type="text/css" href="~/css/reset.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/global.css" asp-append-version="true">
    <script src="~/js/global.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Imports", required: false)
</head>
<body>
<header>
    <div class="svg-logo"></div>
    <div class="header-content">
        <label class="header-label disable-selection"><a href="/">Parking</a></label>
        <div class="card-style header-btn disable-selection" onclick="adminLogout()">
            <span>Logout</span>
        </div>
    </div>
    <script>
        const headerLabel = document.querySelector(".header-label")
        const headerBtn = document.querySelector(".header-btn")
        const token = sessionStorage.getItem("accessToken")
        if(token) {
            headerLabel.style.display = null
            headerBtn.style.display = null
        } else {
            headerLabel.remove()
            headerBtn.remove()
        }
    </script>
</header>
<main role="main">
    @RenderBody()
</main>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>