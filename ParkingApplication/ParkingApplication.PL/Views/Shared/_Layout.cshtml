@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - ParkingApplication</title>
    <link rel="stylesheet" type="text/css" href="~/css/reset.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/global.css" asp-append-version="true">
    @await RenderSectionAsync("Imports", required: false)
</head>
<body>
<header>
    <div class="svg-logo"></div>
    <div class="header-content">
        <a href="/">
            <label class="header-label disable-selection">Parking</label>
        </a>
        <a href="/authorization">
            <div class="card-style header-btn disable-selection">
                <span>Login</span>
            </div>
        </a>
        <a href="/logout">
            <div class="card-style header-btn disable-selection">
                <span>Logout</span>
            </div>
        </a>
    </div>
</header>
<main role="main">
    @RenderBody()
</main>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>